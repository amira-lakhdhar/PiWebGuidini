{% extends 'baseBack.html.twig' %}

{% block title %}Hello Doctor!{% endblock %}

{% block body %}
    <div style="display: flex; align-items: center; justify-content: center; margin-top: 0px; padding: 10px;">

    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Add a Hospital</h1>
            {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-10">
                    {{ form_widget(f.name,{'att':'form-control'}) }}
                    {{ form_errors(f.name,{'att':'text-danger'}) }}
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">Location</label>
                <div class="col-sm-10">
                    {{ form_widget(f.location,{'att':'form-control'}) }}
                    {{ form_errors(f.location,{'att':'text-danger'}) }}
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">Score</label>
                <div class="col-sm-10">
                    {{ form_widget(f.score,{'att':'form-control'}) }}
                    {{ form_errors(f.score,{'att':'text-danger'}) }}
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">Phone</label>
                <div class="col-sm-10">
                    {{ form_widget(f.phone,{'att':'form-control'}) }}
                    {{ form_errors(f.phone,{'att':'text-danger'}) }}
                </div>
            </div>


            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">Email </label>
                <div class="col-sm-10">
                    {{ form_widget(f.email,{'att':'form-control'}) }}
                    {{ form_errors(f.email,{'att':'text-danger'}) }}
                </div>
            </div>


            {{ form_end(f) }}
        </div>
    </div>
    </div>

    {{ form_end(f) }}
    <a href="{{ path('DisplayHospital') }}">Back to Hospital List</a>

{% endblock %}