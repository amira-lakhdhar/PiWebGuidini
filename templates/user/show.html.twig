{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>nom</th>
            <td>{{ user.nom }}</td>
        </tr>
        <tr>
            <th>prenom</th>
            <td>{{ user.prenom }}</td>
        </tr>
        <tr>
            <th>adresse</th>
            <td>{{ user.adresse }}</td>
        </tr>
        <tr>
            <th>email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>password</th>
            <td>{{ user.password }}</td>
        </tr>
        <tr>
            <th>role</th>
            <td>{{ user.role }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('user') }}">back to list</a>

    <a href="{{ path('userEdit', {'id': user.id}) }}">edit</a>

    <a href="{{ path('userDelete', {'id': user.id}) }}">delete</a>
{% endblock %}