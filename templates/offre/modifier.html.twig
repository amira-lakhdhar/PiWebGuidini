{% extends 'baseBack.html.twig' %}


{% block body %}
    <div style="display: flex; align-items: center; justify-content: center; margin-top: 0px; padding: 10px;">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add an Offre</h5>
            {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
            <div class="row mb-4">
                <label for="inputText" class="col-sm-5 col-form-label">Name</label>
                <div class="col-sm-10">
                    {{ form_widget(f.Nom,{'att':'form-control'}) }}
                    {{ form_errors(f.Nom,{'att':'text-danger'}) }}
                </div>
            </div>

            <div class="row mb-4">
                <label for="inputText" class="col-sm-5 col-form-label">Percentage</label>
                <div class="col-sm-10">
                    {{ form_widget(f.Pourcentage,{'att':'form-control'}) }}
                    {{ form_errors(f.Pourcentage,{'att':'text-danger'}) }}
                </div>
            </div>



            {{ form_end(f) }}
        </div>
    </div>


    {{ form_end(f) }}    </div>

    <a href="{{ path('ConsulterOffre') }}">Check Offre List </a>

{% endblock %}