{% extends 'baseBack.html.twig' %}

{% block title %}Hello HospitalController!{% endblock %}

{% block body %}

    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
    <div class="row mb-3">
        <label for="inputText" class="col-sm-4 col-form-label">Name</label>
        <div class="col-sm-10">
            {{ form_widget(f.Nom,{'att':'form-control'}) }}
            {{ form_errors(f.Nom,{'att':'text-danger'}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-4 col-form-label">Email</label>
        <div class="col-sm-10">
            {{ form_widget(f.Email,{'att':'form-control'}) }}
            {{ form_errors(f.Email,{'att':'text-danger'}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-4 col-form-label">Logo</label>
        <div class="col-sm-10">
            {{ form_widget(f.Logo,{'att':'form-control'}) }}
            {{ form_errors(f.Logo,{'att':'text-danger'}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-4 col-form-label">Contact</label>
        <div class="col-sm-10">
            {{ form_widget(f.Contact,{'att':'form-control'}) }}
            {{ form_errors(f.Contact,{'att':'text-danger'}) }}
        </div>
    </div>

    {{ form_end(f) }}
    <a class="btn btn-primary" href="{{ path('DisplayCompagnie') }}">Back to Compagnies List</a>

{% endblock %}