
<h1 align ="center" style="color:cadetblue;">Liste Evenemenet</h1><hr>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h1 align="center" style="color:greenyellow;">Evenemenet</h1>

                    </div>
                    <!DOCTYPE html>
                    <html>
                    <head>
                        <style>
                            #customers {
                                font-family: Arial, Helvetica, sans-serif;
                                border-collapse: collapse;
                                width: 100%;
                            }
                            #customers td, #customers th {
                                border: 1px solid #ddd;
                                padding: 8px;
                            }
                            #customers tr:nth-child(even){background-color: #f2f2f2;}
                            #customers tr:hover {background-color: #b1dfbb;}
                            #customers th {
                                padding-top: 12px;
                                padding-bottom: 12px;
                                text-align: left;
                                background-color:#b084eb;
                                color: white;
                            }
                        </style>
                    </head>
                    </html>
                </div>
            </div>
        </div>
    </div>
</div>


<table class="table table-striped table-bordered" id="customers" >
    <thead>
    <tr>
        <th class="wd-15p">

            nom</th>
        <th class="wd-15p">

            date</th>
        <th class="wd-15p">

            type</th>
        <th class="wd-15p">

            offre</th>
        <th class="wd-15p">

            prix</th>
        <th class="wd-15p">

        localisation</th>

       <!-- <th class="wd-15p">

            image</th>-->
    </tr>
    </thead>
    <tbody>
    {% for event in events %}
        <tr>
            <td>{{ event.nom }}</td>
            <td>{{ event.Date |date('d-m-Y')}} </td>
            <td> {{ event.Type }} </td>
            <td> {{ event.getOffre().nom }} </td>
            <td> {{ event.Prix }} </td>
            <td> {{ event.localisation }} </td>



        </tr>
    {% endfor %}
    </tbody>
</table>


