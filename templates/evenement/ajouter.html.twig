{% extends 'base.html.twig' %}


{% block body %}

    <div style="display: flex; align-items: center; justify-content: center; margin-top: 0px; padding: 10px;"

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add an Event</h5>
            {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-10">
                    {{ form_widget(f.Nom,{'att':'form-control'}) }}
                    {{ form_errors(f.Nom,{'att':'text-danger'}) }}
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">Date</label>
                <div class="col-sm-10">
                    {{ form_widget(f.Date,{'att':'form-control'}) }}
                    {{ form_errors(f.Date,{'att':'text-danger'}) }}
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">Type</label>
                <div class="col-sm-10">
                    {{ form_widget(f.Type,{'att':'form-control'}) }}
                    {{ form_errors(f.Type,{'att':'text-danger'}) }}
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">Localisation</label>
                <div class="col-sm-10">
                    {{ form_widget(f.localisation,{'att':'form-control'}) }}
                    {{ form_errors(f.localisation,{'att':'text-danger'}) }}
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">Image  </label>
                <div class="col-sm-10">
                    {{ form_widget(f.Image,{'att':'form-control'}) }}
                    {{ form_errors(f.Image,{'att':'text-danger'}) }}
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">Description   </label>
                <div class="col-sm-10">
                    {{ form_widget(f.Description,{'att':'form-control'}) }}
                    {{ form_errors(f.Description,{'att':'text-danger'}) }}
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">Prix</label>
                <div class="col-sm-10">
                    {{ form_widget(f.Prix,{'att':'form-control'}) }}
                    {{ form_errors(f.Prix,{'att':'text-danger'}) }}
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">Offre</label>
                <div class="col-sm-10">
                    {{ form_widget(f.Offre,{'att':'form-control'}) }}
                    {{ form_errors(f.Offre,{'att':'text-danger'}) }}
                </div>
            </div>




            {{ form_end(f) }}
        </div>
    </div>

    {{ form_end(f) }}
    <a href="{{ path('ShowEvenement') }}">Back to Evenement List</a>

{% endblock %}