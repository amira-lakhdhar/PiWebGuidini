{% extends 'baseBack.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/mercuryseriesflashy/css/flashy.css') }}">

{% endblock %}
{% block body %}
    <table class="table table-striped">
        <thead>
        <th>  </th>
        <th>Numero du vol</th>
        <th>Date du vol</th>
        <th>Destination</th>
        <th>ville depart</th>
        <th>type vol</th>
        <th>Compagnie</th>
        <th>      </th>
        <th>Actions</th>
        </thead>
        {% for vol in vols %}
            <tr>
                <td>  </td>
                <td>{{ vol.getNumVol() }}</td>
                <td>{{ vol.getDateVol() |date('d-m-Y')}}</td>
                <td>{{ vol.destination }}</td>
                <td>{{ vol.getVilleDepart() }}</td>
                <td>{{ vol.getTypeVol() }}</td>
                <td>{{ vol.getCompagnie().nom }}</td>
                <td> <img src="{{ asset('Uploads/Image/'~vol.getCompagnie().Logo) }}" width="70"> </td>
                <td>  <a class="btn btn-success" href="{{ path('modifierVol',{'id':vol.id}) }}">Modifier</a></td>
                <td><a class="btn btn-warning" href="{{ path('DeleteVol',{'id':vol.id}) }}">Delete</a></td> <br>

            </tr>
        {% endfor %}

    </table>
    <a class="btn btn-primary" href="{{ path('AddVol') }}">Ajouter une nouvelle Vol</a>
    {% block javascripts %}
        <script src="//code.jquery.com/jquery.js"></script>
        <!-- Load Flashy default JavaScript -->
        <script src="{{ asset('bundles/mercuryseriesflashy/js/flashy.js') }}"></script>
        <!-- Include Flashy default partial -->
    {% endblock %}
    {{ include('@MercurySeriesFlashy/flashy.html.twig') }}


{% endblock %}