{% extends 'baseBack.html.twig' %}


{% block body %}

    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
    <div class="row mb-3">
        <label for="inputText" class="col-sm-4 col-form-label">Votre Destination</label>
        <div class="col-sm-10">
            {{ form_widget(f.Vol,{'att':'form-control'}) }}
            {{ form_errors(f.Vol,{'att':'text-danger'}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-4 col-form-label">Description </label>
        <div class="col-sm-10">
            {{ form_widget(f.description,{'att':'form-control'}) }}
            {{ form_errors(f.description,{'att':'text-danger'}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-4 col-form-label">Prix </label>
        <div class="col-sm-10">
            {{ form_widget(f.Prix,{'att':'form-control'}) }}
            {{ form_errors(f.Prix,{'att':'text-danger'}) }}
        </div>
    </div>
    {{ form_end(f) }}
    <a class="btn btn-primary" href="{{ path('ConsulterVoyage') }}">Back to Voyages List</a>

{% endblock %}